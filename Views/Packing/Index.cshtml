@model IEnumerable<RMG_Shipping_Documents.Models.PackingList>


<div class="section-header-yellow d-flex justify-content-between align-items-center" style="margin-bottom:10px">
    <h3>Packing List</h3>
    <a asp-action="Create" class="btn btn-primary mb-2">Create Packing List</a>
</div>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">
        No packing list found.
    </div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Buyer</th>
                <th>Style</th>
                <th>PO</th>
                <th>Date</th>
                <th>Destination</th>
                <th>Cartons</th>
                <th>Qty</th>
                <th>G.Weight</th>
                <th>N.Weight</th>
                <th>CBM</th>
                <th>Approved</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.BuyerName</td>
                    <td>@item.Style</td>
                    <td>@item.PO</td>
                    <td>@item.CreatedDate.ToShortDateString()</td>
                    <td>@item.Destination</td>
                    <td>@item.Cartons</td>
                    <td>@item.OrderQtyPac</td>
                    <td>@item.TotalGWeight</td>
                    <td>@item.TotalNWeight</td>
                    <td>@item.TotalCBM</td>
                    <td>@(item.Status == "Approved" ? "Yes" : "No")</td>
                    <td>@item.Status</td>
                    <td>
                        <div class="dropdown">
                            <button class="btn btn-sm btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                ☰
                            </button>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                </li>
                                <li>
                                    <form method="post" asp-action="Delete" asp-route-id="@item.Id" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="dropdown-item text-danger">Delete</button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
