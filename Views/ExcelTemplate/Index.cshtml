@model IEnumerable<RMG_Shipping_Documents.Models.Template>

@{
    ViewData["Title"] = "Excel Templates";
    var buyerName = ViewBag.BuyerName as string ?? "All Buyers";
    var packingListId = ViewBag.PackingListId as string ?? "";
}

<div class="section-header-yellow d-flex justify-content-between align-items-center" style="margin-bottom:10px">
    <h3>Template list for buyer: @buyerName</h3>
    <a class="btn btn-primary" asp-action="Create" asp-route-buyerName="@buyerName" asp-route-packingListId="@packingListId">
        Create Packing Template
    </a>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<table class="table table-striped table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>Template Name</th>
            <th>File Type</th>
            <th>Buyer Name</th>
            <th>Field Mappings</th>
            <th>Active</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TemplateName</td>
                <td>@item.FileType</td>
                <td>@item.BuyerName</td>
                <td>
                    @if (item.FieldMappings != null && item.FieldMappings.Any())
                    {
                        <span class="badge bg-info">@item.FieldMappings.Count() mappings</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">No mappings</span>
                    }
                </td>
                <td>
                    @if (item.IsDefault)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <form asp-action="SetDefault" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@item.Id" />
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-outline-secondary">Make Active</button>
                        </form>
                    }
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(packingListId))
                    {
                        <a class="btn btn-sm btn-success" asp-action="Download" asp-route-id="@item.Id" asp-route-packingListId="@packingListId">
                            <i class="bi bi-download"></i> Download
                        </a>
                    }
                    <a class="btn btn-sm btn-info" asp-action="Edit" asp-route-id="@item.Id">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    <button type="button" class="btn btn-sm btn-danger"
                            data-bs-toggle="modal"
                            data-bs-target="#deleteModal"
                            data-id="@item.Id"
                            data-name="@item.TemplateName"
                            data-buyer="@item.BuyerName"
                            data-filetype="@item.FileType"
                            data-mappings="@(item.FieldMappings?.Count() ?? 0)"
                            data-isdefault="@item.IsDefault">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="bi bi-exclamation-triangle"></i> Delete Template
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-warning">
                    <strong>Warning!</strong> This action cannot be undone.
                </div>
                <p>Are you sure you want to delete this template?</p>
                <div class="card">
                    <div class="card-body">
                        <dl class="row mb-0">
                            <dt class="col-sm-4">Template Name:</dt>
                            <dd class="col-sm-8" id="modal-template-name"></dd>

                            <dt class="col-sm-4">Buyer Name:</dt>
                            <dd class="col-sm-8" id="modal-buyer-name"></dd>

                            <dt class="col-sm-4">File Type:</dt>
                            <dd class="col-sm-8" id="modal-file-type"></dd>

                            <dt class="col-sm-4">Field Mappings:</dt>
                            <dd class="col-sm-8" id="modal-mappings"></dd>

                            <dt class="col-sm-4">Status:</dt>
                            <dd class="col-sm-8" id="modal-status"></dd>
                        </dl>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <form id="deleteForm" method="post" asp-action="DeleteTemplate">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="delete-template-id" />
                    <input type="hidden" name="buyerName" value="@buyerName" />
                    <input type="hidden" name="packingListId" value="@packingListId" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle"></i> Cancel
                    </button>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Yes, Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Handle delete modal
        var deleteModal = document.getElementById('deleteModal');
        deleteModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;

            // Get data from button
            var templateId = button.getAttribute('data-id');
            var templateName = button.getAttribute('data-name');
            var buyerName = button.getAttribute('data-buyer');
            var fileType = button.getAttribute('data-filetype');
            var mappings = button.getAttribute('data-mappings');
            var isDefault = button.getAttribute('data-isdefault');

            // Update modal content
            document.getElementById('modal-template-name').textContent = templateName;
            document.getElementById('modal-buyer-name').textContent = buyerName || 'N/A';
            document.getElementById('modal-file-type').textContent = fileType || 'N/A';
            document.getElementById('modal-mappings').innerHTML = '<span class="badge bg-info">' + mappings + ' mappings</span>';

            var statusHtml = isDefault === 'True'
                ? '<span class="badge bg-success">Active</span>'
                : '<span class="badge bg-secondary">Inactive</span>';
            document.getElementById('modal-status').innerHTML = statusHtml;

            // Set template ID in hidden input
            document.getElementById('delete-template-id').value = templateId;
        });
    </script>
}